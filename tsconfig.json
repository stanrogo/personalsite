{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "removeComments": false,
    "noImplicitAny": false,
    "experimentalDecorators": true
  },
  "exclude": [
    "node_modules"
  ],
  "compileOnSave": false,
  "filesGlob": [
      "**/*.ts",
      "**/*.tsx",
      "!node_modules/**"
  ],
  "atom": {
     "formatOnSave": true
  }
}
